<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-fixed-top header_top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div   class="logo_wrapper ">
                    <a href="@Url.Action("Index", "Book")">
                        <h1 class="logo_top">AC</h1>
                    </a>
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <div class="search_div_bar">
                            @using (Html.BeginForm("SearchTenSach", "Book", new { @class = "search_bar" }))
                            {
                                <input class="input_text" type="text" placeholder="Tìm kiếm sách..." name="tenSach">
                                <input class="input_btn" type="submit" value="Tìm" />
                            }
                        </div>
                        </li>                   
                    <li class="bag_cart ">                     
                        <div class="dropdown">
                            <a class="glyphicon glyphicon-shopping-cart dropBtn" href="/ShoppingCart/ShowToCart">
                                @Html.Action("BagCart", "ShoppingCart")
                            </a>
                            <div class="dropdown-content">
                                <div>
                                    @Html.Action("BagCartItem", "ShoppingCart")
                                </div>                               
                            </div>
                        </div>
                    </li>
                    <li>@Html.Partial("_LoginPartial")</li>
                </ul>                                                  
           </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="div_sroll_wrapper">
            <div class="scrolltop-wrap">
                <a href="#" role="button" aria-label="Scroll to top" style="height:60px !important; width:60px !important;">
                    <svg viewBox="0 0 48 48" width="60px" height="60px" >
                        <path id="scrolltop-bg" d="M0 0h48v48h-48z"></path>
                        <path id="scrolltop-arrow" d="M14.83 30.83l9.17-9.17 9.17 9.17 2.83-2.83-12-12-12 12z"></path>
                    </svg>
                </a>
            </div>
        </div>
        @RenderBody()
            
    </div>
    <footer class="footer-distributed footer_wrapper ">
        <div class="footer-left">
            <h3>Hoàng Ân<span> - Nhóm AC</span></h3>
            <p class="footer-links">
                <a href="#">Home</a>
                ·
                <a href="#">Sản phẩm</a>
                ·
                <a href="#">Giỏ Hàng</a>
                ·
                <a href="#">About</a>
                ·
                <a href="#">Contact</a>
            </p>
            <p class="footer-company-name">© Copyright Sử Hoàng Ân 2020</p>
        </div>
        <div class="footer-right">
            <p>Contact Us</p>
            <form action="#" method="post">
                <input type="text" name="email" placeholder="Email">
                <textarea name="message" placeholder="Message"></textarea>
                <button>Send</button>
            </form>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/ChangeImg.js"></script>
    @RenderSection("scripts", required: false)

</body>
</html>
